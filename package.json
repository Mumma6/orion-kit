{
  "name": "orion-kit",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs": "pnpm --filter docs dev",
    "studio": "pnpm --filter studio dev",
    "db:generate": "pnpm --filter @workspace/database db:generate",
    "db:migrate": "pnpm --filter @workspace/database db:migrate",
    "db:push": "pnpm --filter @workspace/database db:push",
    "db:pull": "pnpm --filter @workspace/database db:pull",
    "db:studio": "pnpm --filter studio dev",
    "db:check": "pnpm --filter @workspace/database db:check",
    "db:seed": "pnpm --filter @workspace/database db:seed"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}

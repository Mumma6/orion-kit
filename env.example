# Orion Kit Environment Variables Reference
# This file shows all environment variables used across the monorepo
# Copy the relevant sections to each app's .env.local file

# =============================================================================
# DATABASE (used by: packages/database, apps/api, apps/studio)
# =============================================================================
DATABASE_URL=postgresql://user:password@host.neon.tech/neondb?sslmode=require

# =============================================================================
# JWT AUTHENTICATION (used by: apps/api, packages/auth)
# =============================================================================
AUTH_JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-secure

# =============================================================================
# APP URLS (used by: apps/api, packages/auth, packages/payment)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3002

# =============================================================================
# STRIPE PAYMENTS (used by: apps/api, apps/app, packages/payment)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=price_...
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE=price_...

# =============================================================================
# POSTHOG ANALYTICS (used by: apps/web, apps/app, packages/analytics)
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# AXIOM OBSERVABILITY (used by: apps/api, packages/observability)
# =============================================================================
NEXT_PUBLIC_AXIOM_TOKEN=xaat-...
NEXT_PUBLIC_AXIOM_DATASET=orion-kit
